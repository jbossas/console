<module rename-to="app">

    <#list modules as module>
        <inherits name="${module}"/>
    </#list>

    <!-- these are generated -->
    <#assign keys = properties?keys>
    <#list keys as key>
        <set-configuration-property name="${key}" value="${properties[key]}"/>
    </#list>

    <!-- these are static -->
    <extend-property name="locale" values="en,de,es,fr,pt_BR,zh_Hans,ja"/>
    <set-property-fallback name="locale" value="en"/>
    <set-property name="locale" value="en,de,es,fr,pt_BR,zh_Hans,ja"/>

    <set-property name="user.agent" value="ie6,ie8,ie9,gecko1_8,safari"/>

    <set-configuration-property name="console.profile" value="jboss"/>

    <source path='client'/>

</module>
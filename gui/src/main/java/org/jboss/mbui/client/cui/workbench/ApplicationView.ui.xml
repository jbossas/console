<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .border-right {
            border-right: 1px solid rgb(167, 171, 180);
        }

        .border-top {
            border-top: 1px solid rgb(167, 171, 180);
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="60">
            <g:SimpleLayoutPanel ui:field="headerPanel"/>
        </g:north>
        <g:south size="25">
            <g:SimpleLayoutPanel ui:field="footerPanel"/>
        </g:south>
        <g:west size="250">
            <g:SimpleLayoutPanel ui:field="repositoryPanel" addStyleNames="{style.border-right}"/>
        </g:west>
        <g:south size="150">
            <g:SimpleLayoutPanel ui:field="contextPanel" addStyleNames="{style.border-top}"/>
        </g:south>
        <g:center>
            <g:SimpleLayoutPanel ui:field="mainPanel"/>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>